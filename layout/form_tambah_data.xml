<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/tilIdPel">

            <EditText
                android:id="@+id/etNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="No Tempat"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/tilNamaPel"
            android:layout_below="@+id/tilIdPel">

            <EditText
                android:id="@+id/etNamaTok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Harga"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilNamaPel"
            android:id="@+id/tilAlamat">

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ukuran"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background_normal"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilAlamat"
            android:id="@+id/tilDaya">

        </android.support.design.widget.TextInputLayout>

        <!--<android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilDaya"
            android:id="@+id/tilMeterNo">

            <EditText
                android:id="@+id/etMeterNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meter Nomor"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background_normal"/>

        </android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilDaya"
            android:id="@+id/tilLatitude">

            <EditText
                android:id="@+id/etLatitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:singleLine="true"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background_normal"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilLatitude"
            android:id="@+id/tilLongitude">

            <EditText
                android:id="@+id/etLongitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:singleLine="true"
                android:inputType="numberSigned|numberDecimal"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background_normal"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tilLongitude"
            android:id="@+id/tilGambar">

            <EditText
                android:id="@+id/etGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Link Gambar"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/editbox_background_normal"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</ScrollView>
